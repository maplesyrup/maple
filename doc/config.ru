# config.ru
use Rack::Static,
  :urls => ["/controllers", "/models", "/javascript/models", "/javascript/views"],
  :root => "."

run lambda { |env|
  [
    200,
    {
      'Content-Type'  => 'text/html',
      'Cache-Control' => 'public, max-age=86400'
    },
    File.open('index.html', File::RDONLY)
  ]
}
