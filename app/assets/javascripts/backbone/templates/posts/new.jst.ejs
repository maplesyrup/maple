<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h3><i class="icon-edit icon-large"></i> Create New Post</h3>
</div>

<div class="modal-body">
  <form accept-charset="UTF-8" action="/posts" class="new_post" enctype="multipart/form-data" id="new-post" method="post">
    <label for="post[title]">Title</label>
    <input type="text" name="post[title]" id="post-title" />

    <label for="post[content]">Content</label>
    <input type="text" name="post[content]" maxlength="500" id="post-content" />

    <label for="post[company]">Select Company</label>
    <select id="company" name="post[company_id]">
    <% if (companies) { %>  
      <% for (var i = 0; i < companies.length; i++) { %>
        <option value="<%= companies[i].id %>"><%= companies[i].name %></option>
      <% } %>
    <% } else if (company) { %>
      <option value ="<%= company.id %>"><%= company.name %></option>
    <% } %>
    </select>
    
    <% if (campaign) { %> 
      <label for="post[campaign_id]">Select Campaign</label>
      <select name="post[campaign_id]"> 
        <option value="<%=campaign.id %>"><%= campaign.title %></option>
      </select>
    <% } else { %>
      <div id="campaign-select"></div>
    <% } %>

    <label for="post[image]">Upload</label>
    <input type="file" name="post[image]" id="post-image" />
  </form>
</div>

<div class="modal-footer">
  <div class="spinner">
    <i class="icon-spinner icon-spin icon-large"></i> Uploading ...
  </div>
  <a href="#" id="post-submit" class="btn btn-primary">Submit</a>
</div>
