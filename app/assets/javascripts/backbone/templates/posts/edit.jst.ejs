<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h3><i class="icon-edit icon-large"></i> Edit Post</h3>
</div>

<div class="modal-body">
  <form accept-charset="UTF-8" action="/posts" class="edit_post" enctype="multipart/form-data" id="edit-post" method="post">
    <label for="title">Title</label>
    <input type="text" value="<%= post.title %>" name="title" id="post-title" />

    <label for="content">Content</label>
    <input type="text" value="<%= post.content %>" name="content" maxlength="500" id="post-content" />

    <label for="company">Select Company</label>
    <select id="company" name="company_id">
    <% if (companies) { %>
      <% for (var i = 0; i < companies.length; i++) { %>
      <option <% if (post.company_id == companies[i].id) { %> selected="selected" <% } %>value="<%= companies[i].id %>"><%= companies[i].name %></option>
      <% } %>
    <% } else if (company) { %>
      <option value ="<%= company.id %>"><%= company.name %></option>
    <% } %>
    </select>

    <div id="campaign-select"></div>
  </form>
</div>

<div class="modal-footer">
  <div class="spinner">
    <i class="icon-spinner icon-spin icon-large"></i> Uploading ...
  </div>
  <a href="#" id="post-submit" class="btn btn-primary">Submit</a>
</div>

