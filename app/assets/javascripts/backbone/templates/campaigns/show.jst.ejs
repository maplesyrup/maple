<hr>
<h3 class="center"> Campaigns </h3>
<hr>
<ul class="nav nav-tabs">
  <li class="active">
    <a href="#tab1" data-toggle="tab" id="current-campaigns">Current (<%= campaigns.current.length %>) </a>
  </li>
  <li>
    <a href="#tab2" data-toggle="tab" id="future-campaigns">Future (<%= campaigns.future.length %>)</a>
  </li>
  <li>
    <a href="#tab3" data-toggle="tab" id="past-campaigns">Archive (<%= campaigns.past.length %>) </a>
  </li>
</ul>

<div id="new-campaign-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">New Campaign</h3>
  </div>
  <div class="modal-body">
  <form>
    Title</br> 
    <input type="text" name="title"></br>
    Description</br> 
    <textarea name="description"></textarea></br>
    Starting </br>
    <input type="datetime-local" name="starttime"></br>
    Ending </br>
    <input type="datetime-local" name="endtime"></br>
  </form>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary" id="create-campaign">Create Campaign</button>
  </div>
</div>

<div class="tab-content">
  <div class="tab-pane active" id="tab1">
  <ul class="nav nav-tabs nav-stacked">    
    <% if (company_signed_in === true && 
        id === session.currentCompany.id ) { %>
      <li><a href="#new-campaign-modal" data-toggle="modal">
        <i class="icon-plus icon-large"></i><span>New Campaign </span>
        </a>
      </li> 
    <% } %>
    <% campaigns.current.forEach(function(campaign){ %> 
      <li>
        <a href="#">
          <h3> <%= campaign.title %> </h3>
          <p>
            <%= campaign.description %>
          </p>
        </a>
      </li> 
    <% }) %>
  </ul>     
  </div>
  <div class="tab-pane" id="tab2">
    <ul class="nav nav-tabs nav-stacked">  
    <% if (company_signed_in === true && 
        id === session.currentCompany.id ) { %>
      <li><a href="#new-campaign-modal" data-toggle="modal">
        <i class="icon-plus icon-large"></i><span>New Campaign </span>
        </a>
      </li> 
    <% } %>
    <% campaigns.future.forEach(function(campaign){ %>
      <li> 
        <a href="#">
          <h3> <%= campaign.title %> </h3>
          <p>
            <%= campaign.description %>
          </p>
         </a> 
      </li> 
    <% }) %>
  </div>
  <div class="tab-pane" id="tab3">
    <p> Hello, I'm in Section 3. </p>
  </div>
</div>
