<div class="container-fluid account-form">
  <h1 class="large-header">Maple Syrup</h1>
  <h3 class="sub-header">For Companies</h3>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.text_field :name, :autofocus => true, :placeholder => "Enter your company name" %><br />

  <%= f.email_field :email, :autofocus => true, :placeholder => "Enter your email address" %><br />

  <%= f.password_field :password, :placeholder => "Enter your password" %><br />

  <%= f.password_field :password_confirmation, :placeholder => "Confirm your password" %><br />

  <%= f.submit :class => "btn btn-large btn-success", :value => "Sign up" %>

<% end %>

<%= render "companies/shared/links" %>
</div>